<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="LocalsgramActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/LocalsgramActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Actionbar_localsgram</item>
        <item name="android:actionDropDownStyle">@style/PopupMenu.Actionbar_localsgram</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="LocalsgramActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/theme_light_color</item>
        <item name="android:titleTextStyle">@style/Localsgram.ActionBar.TitleTextStyle</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
        <item name="android:icon">@android:color/transparent</item> <!-- This does the magic! -->
    </style>

    <!--<style name="LocalsgramPopMenu" parent="android:Widget.Holo.Light.ListPopupWindow">-->
        <!--<item name="android:popupBackground">@drawable/option_menu_background</item>-->
    <!--</style>-->

    <style name="PopupMenu.Actionbar_localsgram" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_actionbar_localsgram</item>
    </style>

    <style name="Localsgram.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>


</resources>
